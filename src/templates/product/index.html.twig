{% extends 'app.html.twig' %}

{% block title %}Product index{% endblock %}

{% block breadcrumb %} {{ wo_render_breadcrumbs({separator: '/', listId: 'breadcrumbs'}) }} {% endblock %}

{% block body %}
    <div id="corpus" class="col-9">
        <h1>Product index</h1>

        <a id="new" href="{{ path('product_new') }}">Create new</a>

        <table class="table table-index">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>User</th>
                {# <th>Description</th> #}
                <th>State</th>
                <th>Color</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.user.username }} (ID nÂ° {{ product.user.id }})</td>
                    {# <td>{{ product.description }}</td> #}
                    <td>{{ product.state }}</td>
                    <td>{{ product.color }}</td>
                    <td>
                        <a class="showLink" href="{{ path('product_show', {'id': product.id}) }}"><i
                                    class="far fa-eye"></i></a>
                        <a href="{{ path('product_edit', {'id': product.id}) }}"><i class="far fa-edit"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
