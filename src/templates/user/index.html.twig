{% extends 'app.html.twig' %}

{% block title %}User index{% endblock %}

{% block breadcrumb %} {{ wo_render_breadcrumbs({separator: '/', listId: 'breadcrumbs'}) }} {% endblock %}

{% block body %}
    <div id="corpus" class="col-9">
        <h1>User index ({{ pagination.getTotalItemCount }})</h1>

        <a id="new" href="{{ path('user_new') }}">Create new</a>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <table class="table table-index">
            <thead>
            <tr>
                {# sorting of properties based on query components #}
                <th>{{ knp_pagination_sortable(pagination, 'Id', 'u.id') }}</th>
                <th{% if pagination.isSorted('u.name') %} class="sorted"{% endif %}>
                    {{ knp_pagination_sortable(pagination, 'Name', 'u.name') }}
                </th>
                <th{% if pagination.isSorted('u.surname') %} class="sorted"{% endif %}>
                    {{ knp_pagination_sortable(pagination, 'Surname', 'u.surname') }}
                </th>
                <th{% if pagination.isSorted('u.email') %} class="sorted"{% endif %}>
                    {{ knp_pagination_sortable(pagination, 'Email', 'u.email') }}
                </th>
                <th{% if pagination.isSorted('u.roles') %} class="sorted"{% endif %}>
                    {{ knp_pagination_sortable(pagination, 'Roles', 'u.roles') }}
                </th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in pagination %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.name }}</td>
                    <td>{{ user.surname }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.roles }}</td>
                    <td>
                        <a class="showLink" href="{{ path('user_show', {'id': user.id}) }}" title="Show"><i
                                    class="far fa-eye"></i></a>
                        <a href="{{ path('user_edit', {'id': user.id}) }}" title="Edit"><i class="far fa-edit"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {# display navigation #}
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}
