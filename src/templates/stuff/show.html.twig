{% extends 'app.html.twig' %}

{% block title %}My Stuff{% endblock %}

{% block breadcrumb%} {{ wo_render_breadcrumbs({separator: '/', listId: 'breadcrumbs'}) }} {% endblock %}

{% block body %}
<div id="corpus" class="col-9">
    <h1>Product</h1>

    <table class="table table-show">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ product.state }}</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ product.color }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('stuff_index') }}">back to list</a>

    <a href="{{ path('stuff_edit', {'id': product.id}) }}">edit</a>

    {{ include('stuff/_delete_form.html.twig') }}
</div>
{% endblock %}
