<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Stuff - {% block title %}Welcome!{% endblock %} -</title>
    {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
    {% endblock %}
    <ul>
        <li><a href="/dashboard">Dashboard</a></li>
        <li><a href="/stuff">My Stuff</a></li>
        <li><a href="{{ path('myloanedstuffs_index') }}">My Loaned Stuffs</a></li>
        <li><a href="#">My Loan</a></li>
        <li><a href="{{ path('account_index', { 'id': app.user.id }) }}">My Account</a></li>

    {% for role in app.user.roles %}
        {% if role == "ROLE_ADMIN" %}
            <li><a href="/user">All Users</a></li>
            <li><a href="/products">All Products</a></li>
            <li><a href="/category">All Categories</a></li>
        {% endif %}
    {% endfor %}
        <li><a href="/logout">Logout</a></li>
    </ul>
</head>
<body>
{% block body %}{% endblock %}
{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>