{{ form_start(form) }}
{% set i = -1 %}
{% for product in form.product %}
    {% set i = i + 1 %}
    <div class="accordion" id="accordion{{ i }}">
        <div class="accordion-item">
            <h2 class="accordion-header" id="heading{{ i }}">
                <button class="accordion-button" type="button" data-bs-toggle="collapse"
                        data-bs-target="#collapse{{ i }}"
                        aria-expanded="true" aria-controls="collapse{{ i }}">
                    {{ form_widget(attribute(form.product, i).name) }}

                </button>
            </h2>
            <div id="collapse{{ i }}" class="accordion-collapse collapse {% if i == 0 %}show{% endif %}" aria-labelledby="heading{{ i }}"
                 data-bs-parent="#accordion{{ i }}">
                <div class="accordion-body">
                    {{ form_label(form.product.0.description) }}
                    {{ form_widget(attribute(form.product, i).description) }}
                    {{ form_label(form.product.0.state) }}
                    {{ form_widget(attribute(form.product, i).state) }}
                    {{ form_label(form.product.0.color) }}
                    {{ form_widget(attribute(form.product, i).color) }}
                    {{ form_label(form.product.0.subcategory) }}
                    {{ form_widget(attribute(form.product, i).subcategory) }}
                </div>
            </div>
        </div>
    </div>
{% endfor %}

    {{ form_widget(form) }}
<button class="btn">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}

