{% extends 'app.html.twig' %}

{% block title %}My Loaned Stuffs{% endblock %}

{% block body %}
    <h1>My Loaned Stuffs index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Number of Products</th>
            <th>Borrower</th>
            <th>Loaned At</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for loan in user.loans %}
            <tr>
                <td>{{ loan.id }}</td>
                <td>{{ loan.name }}</td>
                <td>{{ loan.description }}</td>
                <td>{{ loan.product|length }}</td>
                <td>{{ loan.borrowedBy.username }}</td>
                <td>{{ loan.loanedAt|date("m/d/Y") }}</td>
                <td>
                    <a href="{{ path('myloanedstuffs_show', {'id': loan.id}) }}">show</a>
                    <a href="{{ path('myloanedstuffs_edit', {'id': loan.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('myloanedstuffs_new') }}">Create new</a>

{% endblock %}