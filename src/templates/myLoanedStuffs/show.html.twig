{% extends 'app.html.twig' %}

{% block title %}My Loaned Stuffs - Show{% endblock %}

{% block body %}
    <h1>Loan n° {{ loan.id }}</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ loan.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ loan.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ loan.description }}</td>
        </tr>
        <tr>
            <th>Products</th>
            <td>
                <ul>
                    {% for product in loan.product %}
                        <li>{{ product.name }}</li>
                    {% endfor %}
                </ul>
            </td>
        </tr>
        <tr>
            <th>Borrower</th>
            <td>{{ loan.borrowedBy.username }} (id n°{{ loan.borrowedBy.id }})</td>
        </tr>
        <tr>
            <th>Loaned At</th>
            <td>{{ loan.loanedAt|date("m/d/Y") }}</td>
        </tr>
        <tr>
            <th>Return At</th>
            {% if loan.returnAt != null %}
                <td>{{ loan.returnAt|date("m/d/Y") }}</td>
            {% else %}
                <td></td>
            {% endif %}
        </tr>
        </tbody>
    </table>

    <a href="{{ path('myloanedstuffs_index') }}">back to list</a>

     <a href="{{ path('myloanedstuffs_edit', {'id': loan.id}) }}">edit</a>

    {{ include('myLoanedStuffs/_delete_form.html.twig') }}
{% endblock %}
