{% extends 'app.html.twig' %}

{% block title %}Category{% endblock %}

{% block breadcrumb %} {{ wo_render_breadcrumbs({separator: '/', listId: 'breadcrumbs'}) }} {% endblock %}

{% block body %}
    <div id="corpus" class="col-9">
        <h1>Category</h1>

        <a id="new" href="{{ path('category_index') }}">back to list</a>

        <table class="table table-show">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>SubCategories</th>
                <td>
                    <ul>
                        {% for subcategory in category.subcategories %}
                            <li>
                                {{ subcategory.name }}
                            </li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
            </tbody>
        </table>
        <div class="btn-group">
            <a class="btn" href="{{ path('category_edit', {'id': category.id}) }}">edit</a>
            {{ include('category/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
